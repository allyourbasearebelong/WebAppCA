extends layout
block content
  .container
      .holder
        h1 Welcome to the plant's page!
          .grid-container
            each row in res1
             .item(style='float:center;')
              h1.itemtitle #{row.Name}
              img.pimage(src="../#{row.Image}", alt="#{row.Image}")
              p.itemp Price: &euro;#{row.Price}
              p.itemp Variety: #{row.Variety}
              
              
              a.button(href="/delete/#{row.Id}") Delete #{row.Name}
              script.
                $(document).ready(function(){
                $("p").click(function(){
                $(this).hide();
                });
                });